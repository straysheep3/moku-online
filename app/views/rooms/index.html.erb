<%= @rooms.each do |room| %>
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= room.title %>
        </h3>
      </div>
      <div class="panel-body">
        <p class="text-center">
          <%= link_to room do %>
            <%= image_tag room.image.url(:medium) %>
          <% end %>
        </p>
        <hr>
        <%= room.description %>
      </div>
      <div class="panel-footer text-right">
        <%= link_to "Enter", room, class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
